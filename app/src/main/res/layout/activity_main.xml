<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/first_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_name_icon"
            android:tint="@color/colorDarkGray" />

        <EditText
            android:id="@+id/edit_text_first_name"
            android:layout_width="325dp"
            android:layout_height="48dp"
            android:hint="@string/first_name_hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/last_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_name_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_name_icon"
            android:alpha="0" />

        <EditText
            android:id="@+id/edit_text_last_name"
            android:layout_width="325dp"
            android:layout_height="48dp"
            android:hint="@string/last_name_hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/last_name_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_phone_icon"
            android:tint="@color/colorDarkGray" />

        <EditText
            android:id="@+id/edit_text_phone"
            android:layout_width="325dp"
            android:layout_height="48dp"
            android:hint="@string/phone_hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_email_icon"
            android:tint="@color/colorDarkGray" />

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="325dp"
            android:layout_height="48dp"
            android:hint="@string/email_hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_location_icon"
            android:tint="@color/colorDarkGray" />

        <EditText
            android:id="@+id/edit_text_address"
            android:layout_width="325dp"
            android:layout_height="48dp"
            android:hint="@string/address_hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/website_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_website_icon"
            android:tint="@color/colorDarkGray" />

        <EditText
            android:id="@+id/edit_text_website"
            android:layout_width="325dp"
            android:layout_height="48dp"
            android:hint="@string/website_hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/website_layout">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:paddingHorizontal="15dp"
            android:src="@drawable/ic_website_icon"
            android:alpha="0" />

        <com.google.android.material.button.MaterialButton
            style="@style/Button"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:text="@string/save_button_label"
            android:textAllCaps="true"
            android:onClick="onButtonClick"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>